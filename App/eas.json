{
  "cli": {
    "version": ">= 16.26.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "simulator": true
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"         
      },
      "ios": {
        "simulator": false         
      }
    },
    "production": {
      "autoIncrement": true,
      "android": {
        "buildType": "app-bundle"  
      },
      "ios": {
        "simulator": false         
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./keys/google-play-service-account.json"
      },
      "ios": {
        "ascAppId": "TU_APPLE_APP_ID"
      }
    }
  }
}